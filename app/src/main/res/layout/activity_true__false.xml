<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".True_False">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#416297"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:textColor="#ffff"
                android:textStyle="bold"
                android:textSize="23dp"
                android:layout_margin="30dp"
                android:drawableLeft="@drawable/ic_fiber_manual_record_black_24dp"
                android:text="Q. question text"
                android:layout_height="wrap_content"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_width="match_parent"
                    android:checked="true"
                    android:text="true"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:layout_margin="16dp"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:checked="false"
                    android:text="false"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:layout_margin="16dp"
                    android:layout_height="wrap_content"/>
            </RadioGroup>


            <Button
                android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:text="add"
                android:textSize="16dp"
                android:textColor="#416297"
                android:textAllCaps="false"
                android:background="@drawable/subject_layout"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>